{
    "name": "acusti.ca",
    "license": "CC0-1.0",
    "scripts": {
        "format": "prettier --write .",
        "start": "npm run serve",
        "build-css": "compass compile --environment production ./styles",
        "build-js": "esbuild scripts/main.js --bundle --minify --outfile=app-built.js",
        "build": "npm run build-css && npm run build-js",
        "watch:jekyll": "jekyll serve --watch --config _config.yml,_config-local.yml,_config-dev.yml --drafts",
        "watch:css": "compass watch ./styles",
        "serve": "run-p 'watch:*'",
        "serve:prod": "npm run build && jekyll serve --config _config.yml,_config-local.yml"
    },
    "devDependencies": {
        "esbuild": "^0.20.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.2.5"
    },
    "dependencies": {
        "affixing-header": "^1.0.0-beta.2",
        "onscrolling": "^2.0.0-beta.6"
    },
    "prettier": {
        "arrowParens": "always",
        "singleQuote": true,
        "printWidth": 84,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false,
        "overrides": [
            {
                "files": "*.css",
                "options": {
                    "singleQuote": false
                }
            }
        ]
    }
}
